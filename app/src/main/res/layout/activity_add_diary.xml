<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDiary_Activity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="여행 기본 정보 추가하기"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="@color/teal_700"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행 제목"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/et_triptitle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행 국가 및 지역"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/et_where"
        android:layout_width="200dp"
        android:layout_height="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행 기간"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tx_startday"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="시작 날짜"
            android:onClick="OnClickHandler"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~                   "/>

        <TextView
            android:id="@+id/tx_finishday"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="종료 날짜"
            android:onClick="OnClickHandler2"
            android:textColor="@color/black"
            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_add"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가"
        />


</LinearLayout>